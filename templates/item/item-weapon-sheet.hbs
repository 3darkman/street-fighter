<section class="{{cssClass}} flexcol">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-action="editImage" data-field="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'STREET_FIGHTER.Item.Types.weapon'}}" />
      </h1>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item active" data-tab="details">{{localize "STREET_FIGHTER.Tabs.details"}}</a>
    <a class="item" data-tab="effects">{{localize "STREET_FIGHTER.Tabs.effects"}}</a>
  </nav>

  <section class="sheet-body">
    {{!-- Details Tab --}}
    <div class="tab active" data-group="primary" data-tab="details">
      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Common.sourceId"}}</label>
        <input type="text" name="system.sourceId" value="{{systemData.sourceId}}" placeholder="e.g., katana" readonly />
      </div>

      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Weapon.techniqueId"}}</label>
        <select name="system.techniqueId">
          <option value="">-- {{localize "STREET_FIGHTER.Common.select"}} --</option>
          {{#each weaponTechniques}}
          <option value="{{this.id}}" {{#if (eq this.id ../systemData.techniqueId)}}selected{{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Weapon.speed"}}</label>
          <input type="text" name="system.speed" value="{{systemData.speed}}" placeholder="+0" />
        </div>
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Weapon.damage"}}</label>
          <input type="text" name="system.damage" value="{{systemData.damage}}" placeholder="+2" />
        </div>
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Weapon.movement"}}</label>
          <input type="text" name="system.movement" value="{{systemData.movement}}" placeholder="-1" />
        </div>
      </div>

      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Weapon.special"}}</label>
        <textarea name="system.special" rows="2" maxlength="150">{{systemData.special}}</textarea>
      </div>

      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Common.description"}}</label>
        {{#if isEditable}}<prose-mirror name="system.description" button="true" toggled="true" value="{{systemData.description}}">{{{enrichedDescription}}}</prose-mirror>{{else}}<div class="editor-content">{{{enrichedDescription}}}</div>{{/if}}
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab" data-group="primary" data-tab="effects">
      {{> "systems/street-fighter/templates/item/partials/item-effects-tab.hbs"}}
    </div>
  </section>
</section>
