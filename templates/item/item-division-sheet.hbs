<section class="{{cssClass}} flexcol">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-action="editImage" data-field="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'STREET_FIGHTER.Item.Types.division'}}" />
      </h1>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item active" data-tab="details">{{localize "STREET_FIGHTER.Tabs.details"}}</a>
    <a class="item" data-tab="effects">{{localize "STREET_FIGHTER.Tabs.effects"}}</a>
  </nav>

  <section class="sheet-body">
    {{!-- Details Tab --}}
    <div class="tab active" data-group="primary" data-tab="details">
      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Common.sourceId"}}</label>
        <input type="text" name="system.sourceId" value="{{systemData.sourceId}}" placeholder="e.g., traditional" readonly />
      </div>

      {{#if isEmbedded}}
      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Division.rank"}}</label>
        <input type="text" name="system.rank" value="{{systemData.rank}}" />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Division.wins"}}</label>
          <input type="number" name="system.wins" value="{{systemData.wins}}" min="0" step="1" />
        </div>
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Division.draws"}}</label>
          <input type="number" name="system.draws" value="{{systemData.draws}}" min="0" step="1" />
        </div>
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Division.losses"}}</label>
          <input type="number" name="system.losses" value="{{systemData.losses}}" min="0" step="1" />
        </div>
        <div class="form-group">
          <label>{{localize "STREET_FIGHTER.Division.knockouts"}}</label>
          <input type="number" name="system.knockouts" value="{{systemData.knockouts}}" min="0" step="1" />
        </div>
      </div>
      {{/if}}

      <div class="form-group">
        <label>{{localize "STREET_FIGHTER.Common.description"}}</label>
        {{#if isEditable}}<prose-mirror name="system.description" button="true" toggled="true" value="{{systemData.description}}">{{{enrichedDescription}}}</prose-mirror>{{else}}<div class="editor-content">{{{enrichedDescription}}}</div>{{/if}}
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab" data-group="primary" data-tab="effects">
      {{> "systems/street-fighter/templates/item/partials/item-effects-tab.hbs"}}
    </div>
  </section>
</section>
