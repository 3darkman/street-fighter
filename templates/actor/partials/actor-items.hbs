<div class="items-section">
  {{#if (eq itemType "moves")}}
  {{!-- Maneuvers --}}
  <div class="items-header">
    <h3>{{localize "STREET_FIGHTER.Item.Types.maneuver"}}</h3>
    <button type="button" class="item-create" data-type="maneuver">
      <i class="fas fa-plus"></i> {{localize "STREET_FIGHTER.Common.create"}}
    </button>
  </div>
  <ol class="item-list">
    {{#each items.maneuvers as |item|}}
    <li class="item" data-item-id="{{item._id}}">
      <img class="item-image" src="{{item.img}}" alt="{{item.name}}" />
      <span class="item-name">{{item.name}}</span>
      <span class="item-stat">{{localize "STREET_FIGHTER.Combat.speed"}}: {{item.system.speed}}</span>
      <span class="item-stat">{{localize "STREET_FIGHTER.Combat.damage"}}: {{item.system.damage}}</span>
      <div class="item-controls">
        <a class="item-control item-use" title="{{localize 'STREET_FIGHTER.Common.roll'}}"><i class="fas fa-dice-d20"></i></a>
        <a class="item-control item-edit" title="{{localize 'STREET_FIGHTER.Common.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'STREET_FIGHTER.Common.delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>

