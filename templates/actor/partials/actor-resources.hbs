<div class="resources-section">
  <h2>{{localize "STREET_FIGHTER.Resources.health"}}</h2>
  <div class="resources-container">
    {{!-- Health --}}
    <div class="resource">
      <span class="resource-label">{{localize "STREET_FIGHTER.Resources.health"}}</span>
      <div class="resource-bar-container">
        <div class="resource-bar health" style="width: {{percentage systemData.resources.health.value systemData.resources.health.max}}%"></div>
      </div>
      <div class="resource-values">
        <button type="button" class="resource-control" data-resource="health" data-action="decrease">-</button>
        <input type="number" name="system.resources.health.value" value="{{systemData.resources.health.value}}" />
        <span>/</span>
        <input type="number" name="system.resources.health.max" value="{{systemData.resources.health.max}}" />
        <button type="button" class="resource-control" data-resource="health" data-action="increase">+</button>
      </div>
    </div>

